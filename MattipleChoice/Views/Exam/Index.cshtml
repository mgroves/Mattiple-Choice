@model IEnumerable<MattipleChoice.Models.Exam>

@{
    ViewBag.Title = "Exams";
}

<h2>Exams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>ID</th>
        <th>
            ExamName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.ExamId</td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExamId }) |
            @Html.ActionLink("Questions", "Index", new { Controller="Questions", id=item.ExamId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ExamId }) |
            @Html.ActionLink("Print With Answer Key", "Print", new { id=item.ExamId }) 
        </td>
    </tr>
}

</table>
